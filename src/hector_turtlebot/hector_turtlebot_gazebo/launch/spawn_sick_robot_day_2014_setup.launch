  </include>
  -->
  
  <include file="$(find turtlebot_gazebo)/launch/includes/roomba.launch.xml">
  
    <!--We need to include the args below (even if not using them) as otherwise roslaunch complains about unset args-->
    <arg name="base" value="$(arg base)"/>
    <arg name="stacks" value="$(arg stacks)"/>
    <arg name="3d_sensor" value="$(arg 3d_sensor)"/>
    
    <arg name="urdf_file" value="$(find xacro)/xacro.py $(find hector_turtlebot_description)/urdf/turtlebot_sick_setup.xacro"/>
  </include>
  
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="30.0" />
  </node>
  
